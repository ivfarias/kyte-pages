---
export interface Props {
	title: string;
	variant?: "white" | "gray09";
}

const { title, variant = "gray09" } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Kyte é o ecossistema para pequenos comércios"
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<!-- Google Tag Manager -->
		<script async defer>
			(function (w, d, s, l, i) {
				w[l] = w[l] || [];
				w[l].push({
					"gtm.start": new Date().getTime(),
					event: "gtm.js",
				});
				var f = d.getElementsByTagName(s)[0],
					j = d.createElement(s),
					dl = l != "dataLayer" ? "&l=" + l : "";
				j.async = true;
				j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
				f.parentNode.insertBefore(j, f);
			})(window, document, "script", "dataLayer", "GTM-M3T5WH5");
		</script>
		<!-- End Google Tag Manager -->

		<!-- _gl Parameter Handler -->
		<script>
			function storeGlParam(value: string) {
				if (!value) return;

				try {
					localStorage.setItem("_gl", value);
				} catch (e) {
					console.warn("Could not store in localStorage:", e);
				}

				const expiryDate = new Date();
				expiryDate.setDate(expiryDate.getDate() + 30);
				document.cookie = `_gl=${value};expires=${expiryDate.toUTCString()};path=/;SameSite=Lax`;
			}

			(function () {
				const urlParams = new URLSearchParams(window.location.search);
				const glParam = urlParams.get("_gl");

				if (glParam) {
					storeGlParam(glParam);
				}
			})();

			document.addEventListener("DOMContentLoaded", function () {
				const urlParams = new URLSearchParams(window.location.search);
				const glParam = urlParams.get("_gl");

				if (glParam) {
					storeGlParam(glParam);
				}
			});
		</script>
		<!-- End _gl Parameter Handler -->

		<title>{title}</title>
	</head>
	<body
		class:list={[
			"font-graphik m-0",
			{
				"bg-white": variant === "white",
				"bg-gray09": variant === "gray09",
			},
		]}
	>
		<slot />
		<script
			defer
			src="https://mintyebfontkit.blob.core.windows.net/$web/kyte-shared.min.js"
		></script>
		<script
			defer
			src="https://mintyebfontkit.blob.core.windows.net/$web/kyte-form-auth.min.js"
		></script>
		<script
			defer
			src="https://mintyebfontkit.blob.core.windows.net/$web/kyte-form-steps.min.js"
		></script>
		<!-- Google Tag Manager (noscript) -->
		<noscript
			><iframe
				src="https://www.googletagmanager.com/ns.html?id=GTM-M3T5WH5"
				height="0"
				width="0"
				style="display:none;visibility:hidden"></iframe></noscript
		>
		<!-- End Google Tag Manager (noscript) -->
	</body>
</html>
