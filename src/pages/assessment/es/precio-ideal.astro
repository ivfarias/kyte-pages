        afterLabel="Después"
        proof1Image="/images/storeSocialProof.svg"
        proof1Alt="RA Verificado"
        proof2Image="/images/seguroGoogle.svg"
        proof2Alt="Seguro Google"
        proof3Image="/images/trustedSSL.svg"
        proof3Alt="Seguro SSL"
        calculatorVariant="spanish"
    />
